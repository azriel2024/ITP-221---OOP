class Book:
    def __init__(self, title, author, year_published):
        self.title = title
        self.author = author
        self.year_published = year_published

    def describe(self):
        print(f"Title: {self.title}, Author: {self.author}, Year Published: {self.year_published}")

book1 = Book("The Hobbit", "J.R.R. Tolkien", 1954)
book2 = Book("War and Peace", "Leo Tolstoy", 1869)
book3 = Book("1984", "George Orwell", 1949)

book1.describe()
book2.describe()
book3.describe()
